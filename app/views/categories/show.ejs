<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.categories %>">categories</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Details of category</a></li>
</ul>

<div class="page-header">
    <h1>Details of category</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>name</th><td><%= category.name %></td></tr>

        <tr><th>description</th><td><%= category.description %></td></tr>

        <tr><th>path</th><td><%= category.path %></td></tr>

        <tr><th>active</th><td><%= category.active %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_category(category), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.category(category), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.categories) %>
</div>
