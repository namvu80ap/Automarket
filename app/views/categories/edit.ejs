<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.categories() %>">categories</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Edit category</a></li>
</ul>

<div class="page-header">
    <h1>Edit category</h1>
</div>

<% var form = formFor(category, {action: pathTo.category(category), method: 'PUT', id: "category-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Update category', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.category(category), {class: 'btn'}) %>
</div>
<%- form.end() %>
