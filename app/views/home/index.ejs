</div> <!-- BANNER -->
    
<!-- LIST CAR -->
<div class="row">
  <% var BreakException= {}; %>
	<% var limit = 20; %>
  <% try{ obj.forEach(function(car) { %>
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading"><%- link_to( car.car.name + "-" + car.car.model , '/viewCar?carId=' + car.car.id ) %></div>
      <div class="panel-body">
          <% if( car.pics ) { %>
					<div id="<%=car.car.id%>" class="carousel slide" style="width: 80%; margin: 0 auto">
					  <!-- Indicators -->
					  <ol class="carousel-indicators">
					    <% var count = 0 %>
					    <% for( var i = 0; i < car.pics.length && i < 3 ; i++ ) {  %>
					    <li data-target="#<%=car.car.id%>" 
					    		class="<% if(count==0) { %><%='active'%> <%}%>"  
					    		data-slide-to="<%=count++%>"></li>
					    <% } %>
					  </ol>
					
					  <!-- Wrapper for slides -->
					  <div class="carousel-inner">
					    <% var count1 = 0; %>
						<% for( var i = 0; i < car.pics.length && i < 3 ; i++ ) {  %>
							<div class="item <% if(count1==0) { %> <%='active'%> <%}%> ">
					      		<img src="<%= car.pics[i].url %>" alt="" class="img-thumbnail">
					      		<div class="carousel-caption">
					        	<%= car.pics[i].name %>
					      		</div>
					    	</div>
					    <% count1++; %>
						<% }; %>
					  </div>
					
					  <!-- Controls -->
					  <a class="left carousel-control" href="#<%=car.car.id%>" data-slide="prev">
					    <span class="icon-prev"></span>
					  </a>
					  <a class="right carousel-control" href="#<%=car.car.id%>" data-slide="next">
					    <span class="icon-next"></span>
					  </a>
				  </div>
					
					<%} //check exists car pic%>

      </div>
    </div>
    </div>
    <% limit--; %>
    <% if( limit === 0) throw BreakException; %>
    <% }); %>
    <% } catch(e){ if (e!==BreakException) throw e; }%>
    
  
</div>
	  
	