<% link_to('Sign in with google', '/auth/google') %>
<!-- Banner -->
<div class="page-header" id="banner">
  <div class="row">
  	 <div class="bs-example">
        <div class="jumbotron">
          <h1>AutoMarket</h1>
          <p>We are trading Japan cars with your Satisfaction is Our Duty</p>
          <p><a class="btn btn-primary btn-lg">Learn more</a></p>
        </div>
      </div>
  </div>
</div> <!-- BANNER -->
    
<!-- LIST CAR -->
<div class="row">
  <% var BreakException= {}; %>
	<% var limit = 2; %>
  <% try{ cars.forEach(function (car) { %>
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading"><%= car.name + "-" + car.model%> </div>
      <div class="panel-body">
        
					<div id="carousel-example-generic" class="carousel slide" style="width: 80%; margin: 0 auto">
					  <!-- Indicators -->
					  <ol class="carousel-indicators">
					    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
					    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
					    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
					  </ol>
					
					  <!-- Wrapper for slides -->
					  <div class="carousel-inner">
					    <div class="item active">
					      <img src="/images/cars/toyota/01w.jpg" alt="" class="img-thumbnail">
					      <div class="carousel-caption">
					        slide 1
					      </div>
					    </div>
							<div class="item">
					      <img src="/images/cars/toyota/02.jpg" alt="" class="img-thumbnail">
					      <div class="carousel-caption">
					        slide 2
					      </div>
					    </div>
							<div class="item">
					      <img src="/images/cars/toyota/03.jpg" alt="" class="img-thumbnail">
					      <div class="carousel-caption">
					        slide 3
					      </div>
					    </div>
					  </div>
					
					  <!-- Controls -->
					  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
					    <span class="icon-prev"></span>
					  </a>
					  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
					    <span class="icon-next"></span>
					  </a>
				  </div>


      </div>
    </div>
    </div>
    <% limit--; %>
    <% if( limit === 0) throw BreakException; %>
    <% }); %>
    <% } catch(e){ if (e!==BreakException) throw e; }%>
    
  
</div>
	  
	