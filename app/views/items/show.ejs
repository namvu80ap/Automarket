<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.items %>">items</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Details of item</a></li>
</ul>

<div class="page-header">
    <h1>Details of item</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>name</th><td><%= item.name %></td></tr>

        <tr><th>description</th><td><%= item.description %></td></tr>

        <tr><th>category</th><td><%= item.category %></td></tr>

        <tr><th>active</th><td><%= item.active %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_item(item), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.item(item), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.items) %>
</div>
