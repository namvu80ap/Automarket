<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.items() %>">items</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">New item</a></li>
</ul>

<div class="page-header">
    <h1>New item</h1>
</div>

<% var form = formFor(item, {action: pathTo.items(), method: 'POST', id: "item-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Create item', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.items(), {class: 'btn'}) %>
</div>
<%- form.end() %>
